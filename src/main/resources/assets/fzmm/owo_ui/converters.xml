<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20.3/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="title">
                    <positioning type="absolute">20,20</positioning>
                    <text translate="true">fzmm.gui.title.converters</text>
                </label>

                <scroll direction="vertical">

                    <flow-layout direction="vertical" id="options-list">
                        <children>
                            <fzmm.screen-tab-row>
                                <id>tabs</id>
                            </fzmm.screen-tab-row>

                            <fzmm.screen-tab>
                                <id>base64</id>
                                <children>
                                    <fzmm.text-box-row>
                                        <id>message</id>
                                    </fzmm.text-box-row>
                                    <fzmm.button-row>
                                        <id>copyDecoded</id>
                                    </fzmm.button-row>
                                    <fzmm.button-row>
                                        <id>copyEncoded</id>
                                    </fzmm.button-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>uuidToArray</id>
                                <children>
                                    <fzmm.predicate-text-box-row>
                                        <id>uuidField</id>
                                    </fzmm.predicate-text-box-row>
                                    <fzmm.button-row>
                                        <id>uuidToArray.random</id>
                                    </fzmm.button-row>
                                    <fzmm.button-row>
                                        <id>uuidToArray.copy</id>
                                    </fzmm.button-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>arrayToUuid</id>
                                <children>
                                    <fzmm.number-row>
                                        <id>array.0</id>
                                        <tooltipId>array</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.number-row>
                                        <id>array.1</id>
                                        <tooltipId>array</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.number-row>
                                        <id>array.2</id>
                                        <tooltipId>array</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.number-row>
                                        <id>array.3</id>
                                        <tooltipId>array</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.button-row>
                                        <id>arrayToUuid.random</id>
                                    </fzmm.button-row>
                                    <fzmm.button-row>
                                        <id>arrayToUuid.copy</id>
                                    </fzmm.button-row>
                                </children>
                            </fzmm.screen-tab>
                        </children>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>30</vertical>
                    </margins>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back</text>

                            <margins>
                                <right>20</right>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>