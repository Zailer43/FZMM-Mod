<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <scroll direction="vertical">
                    <flow-layout direction="vertical">
                        <children>
                            <boolean-row>
                                <id>isShield</id>
                            </boolean-row>

                            <screen-tab-row>
                                <id>tabs</id>
                            </screen-tab-row>

                            <flow-layout direction="horizontal">
                                <children>
                                    <flow-layout direction="vertical">
                                        <children>
                                            <item id="banner-preview">
                                                <sizing>
                                                    <vertical method="fixed">100</vertical>
                                                    <horizontal method="fixed">100</horizontal>
                                                </sizing>
                                            </item>

                                        </children>
                                        <gap>4</gap>

                                        <sizing>
                                            <vertical method="fixed">200</vertical>
                                        </sizing>

                                        <vertical-alignment>center</vertical-alignment>
                                        <horizontal-alignment>center</horizontal-alignment>
                                    </flow-layout>

                                    <flow-layout direction="vertical" id="content">
                                        <children>
                                            <flow-layout direction="ltr-text-flow" id="color-layout">
                                                <children>

                                                </children>

                                                <sizing>
                                                    <horizontal method="fill">100</horizontal>
                                                </sizing>

                                                <vertical-alignment>top</vertical-alignment>
                                                <horizontal-alignment>center</horizontal-alignment>

                                            </flow-layout>

                                            <screen-tab>
                                                <id>addPatterns</id>
                                                <children>
                                                    <flow-layout direction="ltr-text-flow" id="add-patterns-layout">
                                                        <children>

                                                        </children>

                                                        <sizing>
                                                            <horizontal method="fill">100</horizontal>
                                                        </sizing>

                                                        <vertical-alignment>top</vertical-alignment>
                                                        <horizontal-alignment>center</horizontal-alignment>

                                                    </flow-layout>
                                                </children>
                                            </screen-tab>

                                            <screen-tab>
                                                <id>changeColor</id>
                                                <children>
                                                    <flow-layout direction="ltr-text-flow" id="change-color-layout">
                                                        <children>

                                                        </children>

                                                        <sizing>
                                                            <horizontal method="fill">100</horizontal>
                                                        </sizing>

                                                        <vertical-alignment>top</vertical-alignment>
                                                        <horizontal-alignment>center</horizontal-alignment>

                                                    </flow-layout>
                                                </children>
                                            </screen-tab>

                                            <screen-tab>
                                                <id>removePatterns</id>
                                                <children>
                                                    <flow-layout direction="ltr-text-flow" id="remove-patterns-layout">
                                                        <children>

                                                        </children>

                                                        <sizing>
                                                            <horizontal method="fill">100</horizontal>
                                                        </sizing>

                                                        <vertical-alignment>top</vertical-alignment>
                                                        <horizontal-alignment>center</horizontal-alignment>

                                                    </flow-layout>
                                                </children>
                                            </screen-tab>
                                        </children>

                                        <sizing>
                                            <horizontal method="fill">60</horizontal>
                                        </sizing>

                                        <surface>
                                            <panel dark="true"/>
                                        </surface>

                                        <padding>
                                            <all>6</all>
                                        </padding>
                                    </flow-layout>
                                </children>

                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <horizontal-alignment>left</horizontal-alignment>

                            </flow-layout>
                        </children>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">100</vertical>
                    </sizing>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

        </flow-layout>
    </components>
</owo-ui>