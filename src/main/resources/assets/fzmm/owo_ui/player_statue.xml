<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="title">
                    <positioning type="absolute">20,20</positioning>
                    <text translate="true">fzmm.gui.title.playerStatue</text>
                </label>

                <scroll direction="vertical">

                    <flow-layout direction="vertical" id="options-list">
                        <children>
                            <enum-row>
                                <id>horizontal-direction</id>
                            </enum-row>
                            <number-row>
                                <id>posX</id>
                                <tooltipId>pos</tooltipId>
                            </number-row>
                            <number-row>
                                <id>posY</id>
                                <tooltipId>pos</tooltipId>
                            </number-row>
                            <number-row>
                                <id>posZ</id>
                                <tooltipId>pos</tooltipId>
                            </number-row>
                            <text-box-row>
                                <id>name</id>
                                <symbolChatButtons>true</symbolChatButtons>
                            </text-box-row>
                            <screen-tab-row>
                                <id>tabs</id>
                            </screen-tab-row>

                            <screen-tab>
                                <id>generate</id>
                                <children>
                                    <image-rows>
                                        <buttonId>skin</buttonId>
                                        <enumId>skin-source</enumId>
                                    </image-rows>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>update</id>
                                <children>
                                </children>
                            </screen-tab>
                        </children>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>30</vertical>
                    </margins>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="execute-button">
                            <text translate="true">fzmm.gui.button.execute</text>
                        </button>
                    </children>

                    <positioning type="relative">0,100</positioning>

                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>top</vertical-alignment>
                    <gap>4</gap>

                    <margins>
                        <left>20</left>
                        <bottom>20</bottom>
                    </margins>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back</text>

                            <margins>
                                <right>20</right>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="faq-button">
                            <text translate="true">fzmm.gui.button.faq</text>

                            <margins>
                                <right>20</right>
                                <top>20</top>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,0</positioning>
                </flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>